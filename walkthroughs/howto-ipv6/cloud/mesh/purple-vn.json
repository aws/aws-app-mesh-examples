{
    "spec": {
        "listeners": [
            {
                "healthCheck": {
                    "healthyThreshold": 2,
                    "intervalMillis": 5000,
                    "path": "/ping",
                    "protocol": "http",
                    "timeoutMillis": 2000,
                    "unhealthyThreshold": 2
                },
                "portMapping": {
                    "port": 9080,
                    "protocol": "http"
                }
            }
        ],
        "serviceDiscovery": {
            "awsCloudMap": {
                "namespaceName": "default.svc.cluster.local.cloud",
                "serviceName": "colorteller-purple",
                "ipPreference": "IPv4_ONLY"
            }
        }       
    },
    "virtualNodeName": "colorteller-purple-vn"
}