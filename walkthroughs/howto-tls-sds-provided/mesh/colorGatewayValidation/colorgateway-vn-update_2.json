{
    "spec": {
        "listeners": [
            {
                "portMapping": {
                    "port": 9080,
                    "protocol": "http"
                }
            }
        ],
        "serviceDiscovery": {
            "dns": {
                "hostname": $DNS_HOSTNAME
            }
        },
        "backends": [
            {
                "virtualService": 
                {
                    "virtualServiceName": $COLOR_TELLER_VS,
                    "clientPolicy": {
                        "tls": {
                            "validation": {
                                "trust": {
                                    "file": {
                                        "certificateChain": "/keys/ca_1_ca_2_bundle.pem"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        ]
    }
}